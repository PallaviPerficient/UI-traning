<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="cq:Page">
    <jcr:content
        cq:deviceGroups="[/etc/mobile/groups/archetype]"
        jcr:primaryType="cq:PageContent"
        sling:resourceType="atford2/components/structure/content-page">
        <root
            jcr:primaryType="nt:unstructured"
            sling:resourceType="wcm/foundation/components/responsivegrid">
            <header-xf
                jcr:primaryType="nt:unstructured"
                sling:resourceType="atford2/components/experiencefragment"
                fragmentVariationPath="/content/experience-fragments/atford2/us/en/site/header/master"/>
            <breadcrumb
                jcr:primaryType="nt:unstructured"
                sling:resourceType="atford2/components/breadcrumb"/>
            <primary-layout
                jcr:primaryType="nt:unstructured"
                sling:resourceType="wcm/foundation/components/responsivegrid"
                editable="{Boolean}true"/>
            <footer-xf
                jcr:primaryType="nt:unstructured"
                sling:resourceType="atford2/components/experiencefragment"
                fragmentVariationPath="/content/experience-fragments/atford2/us/en/site/footer/master"/>
        </root>
        <cq:responsive jcr:primaryType="nt:unstructured">
            <breakpoints jcr:primaryType="nt:unstructured">
                <smallphone
                    jcr:primaryType="nt:unstructured"
                    title="Small Phone"
                    width="{Long}320"/>
                <phone
                    jcr:primaryType="nt:unstructured"
                    title="Phone"
                    width="{Long}600"/>
                <tablet
                    jcr:primaryType="nt:unstructured"
                    title="Tablet"
                    width="{Long}1024"/>
            </breakpoints>
        </cq:responsive>
    </jcr:content>
</jcr:root>
